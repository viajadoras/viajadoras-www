---
// TrustBadges.astro - Trust indicators with glassmorphism and count-up animations
---

<section class="relative py-12 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap justify-center items-center gap-4 md:gap-6 lg:gap-8 max-w-6xl mx-auto">

      <!-- Badge 1: 100% Verificado -->
      <div
        class="trust-badge group relative flex items-center gap-3 px-6 py-4 rounded-2xl glass-card backdrop-blur-xl border-2 border-white/40 shadow-soft transition-all duration-300 hover:scale-105 hover:shadow-primary hover:border-primary/30"
        data-badge="1"
      >
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-primary to-primary/70 shadow-md transition-transform duration-300 group-hover:rotate-6">
          <span class="material-symbols-outlined text-2xl text-white">shield_check</span>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl md:text-3xl font-display font-bold text-neutral-900 count-up" data-target="100">0</span>
          <span class="text-sm font-medium text-neutral-600">Verificado</span>
        </div>
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-primary/5 to-primary/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Badge 2: 500+ Viajadoras -->
      <div
        class="trust-badge group relative flex items-center gap-3 px-6 py-4 rounded-2xl glass-card backdrop-blur-xl border-2 border-white/40 shadow-soft transition-all duration-300 hover:scale-105 hover:shadow-secondary hover:border-secondary/30"
        data-badge="2"
      >
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-secondary to-secondary/70 shadow-md transition-transform duration-300 group-hover:rotate-6">
          <span class="material-symbols-outlined text-2xl text-white">groups</span>
        </div>
        <div class="flex flex-col">
          <div class="flex items-baseline gap-1">
            <span class="text-2xl md:text-3xl font-display font-bold text-neutral-900 count-up" data-target="500">0</span>
            <span class="text-xl font-display font-bold text-neutral-900">+</span>
          </div>
          <span class="text-sm font-medium text-neutral-600">Viajadoras</span>
        </div>
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-secondary/5 to-secondary/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Badge 3: 15+ Destinos -->
      <div
        class="trust-badge group relative flex items-center gap-3 px-6 py-4 rounded-2xl glass-card backdrop-blur-xl border-2 border-white/40 shadow-soft transition-all duration-300 hover:scale-105 hover:shadow-primary hover:border-primary/30"
        data-badge="3"
      >
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-primary to-primary/70 shadow-md transition-transform duration-300 group-hover:rotate-6">
          <span class="material-symbols-outlined text-2xl text-white">public</span>
        </div>
        <div class="flex flex-col">
          <div class="flex items-baseline gap-1">
            <span class="text-2xl md:text-3xl font-display font-bold text-neutral-900 count-up" data-target="15">0</span>
            <span class="text-xl font-display font-bold text-neutral-900">+</span>
          </div>
          <span class="text-sm font-medium text-neutral-600">Destinos</span>
        </div>
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-primary/5 to-primary/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

      <!-- Badge 4: 4.9/5 Rating -->
      <div
        class="trust-badge group relative flex items-center gap-3 px-6 py-4 rounded-2xl glass-card backdrop-blur-xl border-2 border-white/40 shadow-soft transition-all duration-300 hover:scale-105 hover:shadow-secondary hover:border-secondary/30"
        data-badge="4"
      >
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-secondary to-secondary/70 shadow-md transition-transform duration-300 group-hover:rotate-6">
          <span class="material-symbols-outlined text-2xl text-white">star</span>
        </div>
        <div class="flex flex-col">
          <div class="flex items-baseline gap-0.5">
            <span class="text-2xl md:text-3xl font-display font-bold text-neutral-900 count-up-decimal" data-target="4.9">0.0</span>
            <span class="text-lg font-display font-bold text-neutral-600">/5</span>
          </div>
          <span class="text-sm font-medium text-neutral-600">Rating</span>
        </div>
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-secondary/5 to-secondary/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>

    </div>
  </div>
</section>

<script>
  // Count-up animation for trust badges
  function animateCountUp() {
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const badge = entry.target as HTMLElement;
          const countElements = badge.querySelectorAll('.count-up, .count-up-decimal');

          countElements.forEach(element => {
            const el = element as HTMLElement;
            if (el.dataset.animated === 'true') return;

            const target = parseFloat(el.dataset.target || '0');
            const isDecimal = el.classList.contains('count-up-decimal');
            const duration = 2000; // 2 seconds
            const steps = 60;
            const increment = target / steps;
            const stepDuration = duration / steps;
            let current = 0;

            const timer = setInterval(() => {
              current += increment;
              if (current >= target) {
                current = target;
                clearInterval(timer);
                el.dataset.animated = 'true';
              }

              if (isDecimal) {
                el.textContent = current.toFixed(1);
              } else {
                el.textContent = Math.floor(current).toString();
              }
            }, stepDuration);
          });

          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe all trust badges
    const badges = document.querySelectorAll('.trust-badge');
    badges.forEach(badge => observer.observe(badge));
  }

  // Initialize on DOM load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', animateCountUp);
  } else {
    animateCountUp();
  }

  // Re-initialize on Astro page navigation (for view transitions)
  document.addEventListener('astro:page-load', animateCountUp);
</script>

<style>
  /* Glass card base styling (if not already in global styles) */
  .glass-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  /* Enhanced glow effect on hover */
  .trust-badge:hover {
    animation: subtle-pulse 2s ease-in-out infinite;
  }

  @keyframes subtle-pulse {
    0%, 100% {
      transform: scale(1.05);
    }
    50% {
      transform: scale(1.07);
    }
  }

  /* Smooth number transitions */
  .count-up,
  .count-up-decimal {
    transition: all 0.3s ease;
    font-variant-numeric: tabular-nums;
    will-change: contents;
  }

  /* Material Symbols font weight adjustment for better appearance */
  .material-symbols-outlined {
    font-variation-settings:
      'FILL' 1,
      'wght' 600,
      'GRAD' 0,
      'opsz' 48;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .trust-badge {
      flex: 1 1 calc(50% - 0.5rem);
      min-width: 140px;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .trust-badge {
      flex: 0 1 calc(50% - 1rem);
    }
  }
</style>
