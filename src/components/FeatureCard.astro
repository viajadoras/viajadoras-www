---
const { title, description, icon, iconBgColor = "bg-primary" } = Astro.props as {
  title: string;
  description: string;
  icon: string;
  iconBgColor?: string;
};
---
<div class="flex flex-col items-center text-center p-8 lg:p-10 rounded-3xl bg-secondary shadow-md transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
  <div class={`relative z-10 flex h-20 w-20 items-center justify-center rounded-full ${iconBgColor} shadow-lg mb-6`}>
    <span class="material-symbols-outlined text-5xl text-white">{icon}</span>
  </div>
  <h3 class="text-2xl font-bold text-text-main leading-tight">{title}</h3>
  <p class="mt-4 text-text-light text-base leading-relaxed">{description}</p>
</div>
