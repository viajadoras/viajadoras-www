---
const { title, description, icon, iconBgColor = "bg-primary" } = Astro.props as {
  title: string;
  description: string;
  icon: string;
  iconBgColor?: string;
};
---
<div class="group relative flex flex-col items-center text-center p-8 lg:p-10 rounded-3xl bg-white border border-neutral-100 shadow-soft transition-all duration-500 hover:shadow-soft-lg hover:-translate-y-2 overflow-hidden scroll-reveal">
  <div class="absolute inset-0 bg-gradient-to-br from-white via-transparent to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <div class={`relative z-10 flex h-20 w-20 items-center justify-center rounded-2xl ${iconBgColor} text-white shadow-lg shadow-primary/20 mb-8 transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-500`}>
    <span class="material-symbols-outlined text-4xl">{icon}</span>
  </div>
  
  <h3 class="relative z-10 text-2xl font-bold text-neutral-900 leading-tight mb-4 group-hover:text-primary transition-colors duration-300">{title}</h3>
  <p class="relative z-10 text-neutral-600 text-base leading-relaxed">{description}</p>
</div>
