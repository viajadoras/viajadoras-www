---
const { title, desc, image } = Astro.props as { title: string; desc: string; image?: string };
---
<div class="rounded-2xl border border-gray-800 bg-black text-white p-0 overflow-hidden shadow-sm">
  {image && <img src={image} alt={title} class="h-40 w-full object-cover" />}
  <div class="p-6">
    <h3 class="text-base font-semibold text-white">{title}</h3>
    <p class="mt-2 text-sm text-gray-300">{desc}</p>
  </div>
</div>
