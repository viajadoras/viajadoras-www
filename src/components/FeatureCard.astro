---
const { title, desc, image } = Astro.props as { title: string; desc: string; image?: string };
---
<div class="rounded-2xl border border-gray-200 p-0 dark:border-gray-800 overflow-hidden">
  {image && <img src={image} alt={title} class="h-40 w-full object-cover" />}
  <div class="p-6">
    <h3 class="text-base font-semibold">{title}</h3>
    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{desc}</p>
  </div>
</div>

