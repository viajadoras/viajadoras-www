---
// Seção sobre destinos populares para mulheres - SEO
const destinations = [
  {
    name: 'São Paulo',
    image: '/images/sao-paulo.webp',
    description: 'Hub de negócios e cultura. Conecte-se com mulheres empreendedoras e viajantes na maior metrópole da América Latina.',
    tags: ['Viagem Trabalho', 'Networking', 'Cultura']
  },
  {
    name: 'Rio de Janeiro',
    image: '/images/rio-janeiro.webp',
    description: 'Praias icônicas, natureza exuberante e vida vibrante. Encontre companheiras para explorar a cidade maravilhosa.',
    tags: ['Lazer', 'Praia', 'Socialização']
  },
  {
    name: 'Nordeste',
    image: '/images/nordeste.webp',
    description: 'Salvador, Recife, Fortaleza. Praias paradisíacas e comunidade ativa de mulheres explorando o melhor do litoral brasileiro.',
    tags: ['Praia', 'Cultura', 'Aventura']
  }
];
---

<section id="destinos" class="relative py-24 lg:py-32 overflow-hidden bg-neutral-50">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-gradient-radial from-secondary-200/40 to-transparent blur-3xl opacity-60"></div>
    <div class="absolute bottom-0 left-0 w-[800px] h-[800px] bg-gradient-radial from-primary-100/40 to-transparent blur-3xl opacity-60"></div>
  </div>

  <div class="container relative z-10 mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mx-auto max-w-4xl text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-neutral-200 shadow-sm mb-8">
        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
        <span class="text-sm font-semibold text-neutral-600 tracking-wide uppercase">Destinos em Alta</span>
      </div>

      <h2 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-8 leading-tight">
        Encontre sua próxima
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-primary via-primary-400 to-secondary-400">aventura segura</span>
      </h2>

      <p class="text-xl text-neutral-600 max-w-2xl mx-auto font-light leading-relaxed">
        Conecte-se com milhares de mulheres viajantes nos destinos mais buscados do Brasil e do mundo.
      </p>
    </div>

    <!-- Destinations Grid -->
    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3 max-w-7xl mx-auto">
      {destinations.map((dest) => (
        <div class="group relative h-[520px] rounded-[2.5rem] overflow-hidden cursor-pointer">
          <!-- Image -->
          <div class="absolute inset-0">
            <img
              src={dest.image}
              alt={`Mulheres viajantes em ${dest.name}`}
              class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-neutral-900 via-neutral-900/60 to-transparent opacity-90 transition-opacity duration-500 group-hover:opacity-80"></div>
          </div>

          <!-- Content -->
          <div class="absolute inset-0 p-8 flex flex-col justify-end">
            <div class="transform transition-transform duration-500 group-hover:-translate-y-2">
              <div class="flex flex-wrap gap-2 mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                {dest.tags.map((tag) => (
                  <span class="px-3 py-1 rounded-full bg-black/40 backdrop-blur-md border border-white/20 text-xs font-bold text-white shadow-sm">
                    {tag}
                  </span>
                ))}
              </div>

              <h3 class="font-display text-4xl font-bold text-white mb-3 drop-shadow-md">
                {dest.name}
              </h3>

              <p class="text-neutral-100 text-lg font-medium line-clamp-2 mb-6 group-hover:line-clamp-none transition-all duration-500 drop-shadow-sm">
                {dest.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  .destination-card {
    position: relative;
  }

  .destination-card::before {
    content: '';
    position: absolute;
    inset: -4px;
    background: linear-gradient(135deg,
      rgba(20, 184, 166, 0.5),
      rgba(167, 139, 250, 0.5),
      rgba(251, 146, 60, 0.5)
    );
    border-radius: 1.5rem;
    opacity: 0;
    filter: blur(20px);
    transition: opacity 0.5s ease;
    z-index: -1;
  }

  .destination-card:hover::before {
    opacity: 0.6;
  }

  /* Gradient border fix for better browser support */
  @supports (background: paint(something)) {
    .destination-card > div > div:first-child {
      background: linear-gradient(white, white) padding-box,
                  linear-gradient(135deg,
                    rgba(20, 184, 166, 0.4),
                    rgba(167, 139, 250, 0.4),
                    rgba(251, 146, 60, 0.4)
                  ) border-box;
    }
  }

  /* Smooth animations */
  @media (prefers-reduced-motion: reduce) {
    .destination-card *,
    .destination-card::before {
      transition: none !important;
      transform: none !important;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .destination-card > div {
      height: 450px;
    }
  }
</style>
