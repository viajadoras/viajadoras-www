---
const testimonials = [
  {
    id: 1,
    quote: "Quero fazer minha primeira viagem solo e descobrir quem eu sou quando estou sozinha",
    name: "Julia",
    age: 19,
    location: "São Paulo",
    gradient: "from-primary to-primary-400"
  },
  {
    id: 2,
    quote: "Busco equilibrar minha carreira com aventuras que me façam sentir viva e conectada",
    name: "Marina",
    age: 28,
    location: "Rio",
    gradient: "from-secondary-400 to-secondary"
  },
  {
    id: 3,
    quote: "Quero conhecer mulheres inspiradoras que entendem que networking pode ser divertido",
    name: "Carla",
    age: 35,
    location: "Curitiba",
    gradient: "from-primary-400 to-secondary-400"
  },
  {
    id: 4,
    quote: "Preciso de tempo para mim, longe da rotina, mas com a segurança de não estar só",
    name: "Paula",
    age: 42,
    location: "Salvador",
    gradient: "from-secondary to-primary"
  },
  {
    id: 5,
    quote: "Sonho em realizar as viagens que adiei por anos, agora com toda liberdade",
    name: "Beatriz",
    age: 56,
    location: "BH",
    gradient: "from-primary to-secondary"
  },
  {
    id: 6,
    quote: "Quero compartilhar minha experiência de vida com mulheres de todas as idades",
    name: "Helena",
    age: 63,
    location: "Brasília",
    gradient: "from-primary-400 to-primary"
  }
];

// Duplicar testimonials para criar loop infinito suave
const duplicatedTestimonials = [...testimonials, ...testimonials];
---

<section class="py-24 lg:py-32 bg-neutral-50 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mb-16">
    <div class="text-center max-w-3xl mx-auto">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-neutral-200 shadow-sm mb-6">
        <span class="text-sm font-semibold text-neutral-600 tracking-wide uppercase">Vozes</span>
      </div>

      <h2 class="font-display text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
        O que elas
        <span class="text-primary">desejam</span>
      </h2>
      <p class="text-lg sm:text-xl text-neutral-600 font-light leading-relaxed">
        Liberdade, segurança e conexões reais. Esses são os sonhos das mulheres que viajam.
      </p>
    </div>
  </div>

  <div class="relative">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-32 sm:w-64 bg-gradient-to-r from-neutral-50 via-neutral-50/90 to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-32 sm:w-64 bg-gradient-to-l from-neutral-50 via-neutral-50/90 to-transparent z-10 pointer-events-none"></div>

    <!-- Slider container -->
    <div class="testimonials-slider-container overflow-x-auto overflow-y-hidden py-10 cursor-grab active:cursor-grabbing" data-slider-container>
      <div class="testimonials-track flex gap-8 px-8" data-testimonials-track>
        {duplicatedTestimonials.map((testimonial) => (
          <div class="testimonial-card flex-shrink-0 w-[380px] sm:w-[450px] select-none" key={`${testimonial.id}-${Math.random()}`}>
            <div class="group h-full p-8 rounded-[2rem] bg-white border border-neutral-100 shadow-soft hover:shadow-soft-lg transition-all duration-500 hover:-translate-y-2">
              <!-- Header -->
              <div class="flex items-center gap-4 mb-8">
                <div class={`w-16 h-16 rounded-full bg-gradient-to-br ${testimonial.gradient} flex items-center justify-center shadow-inner text-white font-display font-bold text-2xl`}>
                  {testimonial.name.charAt(0)}
                </div>
                <div>
                  <div class="font-bold text-neutral-900 text-lg">
                    {testimonial.name}
                  </div>
                  <div class="text-sm text-neutral-500 font-medium">
                    {testimonial.age} anos • {testimonial.location}
                  </div>
                </div>
                <div class="ml-auto opacity-10 group-hover:opacity-20 transition-opacity">
                  <svg class="w-10 h-10 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"></path>
                  </svg>
                </div>
              </div>

              <!-- Quote -->
              <p class="text-neutral-700 text-xl leading-relaxed font-light italic">
                "{testimonial.quote}"
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials-slider-container {
    position: relative;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .testimonials-slider-container::-webkit-scrollbar {
    display: none;
  }

  .testimonials-track {
    display: flex;
    animation: scroll-horizontal 50s linear infinite;
    will-change: transform;
  }

  .testimonials-track:hover {
    animation-play-state: paused;
  }

  .testimonials-track.dragging {
    animation-play-state: paused;
    scroll-behavior: auto;
  }

  .testimonials-track.manual-scroll {
    animation-play-state: paused;
  }

  @keyframes scroll-horizontal {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Glass card styling */
  .glass-card {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(255, 255, 255, 0.7) 100%
    );
  }

  /* Hover effects */
  .testimonial-card:hover .glass-card {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.8) 100%
    );
    transform: translateY(-4px);
  }

  /* Shadow styles */
  .shadow-soft {
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03);
  }

  .shadow-glow {
    box-shadow:
      0 8px 16px -4px rgba(20, 184, 166, 0.1),
      0 4px 8px -2px rgba(139, 92, 246, 0.05),
      0 0 0 1px rgba(255, 255, 255, 0.5);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .testimonials-track {
      animation-duration: 50s;
    }
  }

  /* Smooth performance optimization */
  .testimonials-track {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-perspective: 1000;
    perspective: 1000;
  }
</style>

<script>
  function initTestimonialsSlider() {
    const container = document.querySelector('[data-slider-container]') as HTMLElement;
    const track = document.querySelector('[data-testimonials-track]') as HTMLElement;

    if (!container || !track) return;

    let isDragging = false;
    let startX = 0;
    let scrollLeft = 0;
    let autoScrollTimeout: number;

    const pauseAutoScroll = () => {
      track.classList.add('manual-scroll');
      clearTimeout(autoScrollTimeout);

      autoScrollTimeout = window.setTimeout(() => {
        track.classList.remove('manual-scroll');
      }, 3000);
    };

    container.addEventListener('mousedown', (e) => {
      isDragging = true;
      track.classList.add('dragging');
      startX = e.pageX - container.offsetLeft;
      scrollLeft = container.scrollLeft;
      container.style.cursor = 'grabbing';
      pauseAutoScroll();
    });

    container.addEventListener('mouseleave', () => {
      isDragging = false;
      track.classList.remove('dragging');
      container.style.cursor = 'grab';
    });

    container.addEventListener('mouseup', () => {
      isDragging = false;
      track.classList.remove('dragging');
      container.style.cursor = 'grab';
    });

    container.addEventListener('mousemove', (e) => {
      if (!isDragging) return;
      e.preventDefault();
      const x = e.pageX - container.offsetLeft;
      const walk = (x - startX) * 2;
      container.scrollLeft = scrollLeft - walk;
    });

    container.addEventListener('scroll', () => {
      pauseAutoScroll();
    });

    container.addEventListener('touchstart', () => {
      pauseAutoScroll();
    });

    const cards = track.querySelectorAll('.testimonial-card');
    cards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        track.style.animationPlayState = 'paused';
      });

      card.addEventListener('mouseleave', () => {
        if (!track.classList.contains('manual-scroll') && !isDragging) {
          track.style.animationPlayState = 'running';
        }
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTestimonialsSlider);
  } else {
    initTestimonialsSlider();
  }

  document.addEventListener('astro:page-load', initTestimonialsSlider);
</script>
