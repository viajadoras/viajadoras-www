---
const { id, title, subtitle, align = 'center' } = Astro.props as { id?: string; title?: string; subtitle?: string; align?: 'left' | 'center' };
---
<section id={id} class="container py-16">
  {title && (
    <div class={"mx-auto max-w-3xl " + (align === 'center' ? 'text-center' : '')}>
      <h2 class="text-2xl font-semibold sm:text-3xl">{title}</h2>
      {subtitle && <p class="mt-3 text-gray-700 dark:text-gray-300">{subtitle}</p>}
    </div>
  )}
  <div class={title ? 'mt-8' : ''}>
    <slot />
  </div>
</section>
