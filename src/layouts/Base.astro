---
const props = Astro.props as Record<string, string>;
const pageTitle = props.title ?? 'Viajadoras - Vai Segura';
const pageDescription = props.description ?? 'Companhia e segurança entre mulheres: conexões por viagem, check-ins e contatos de confiança.';
const lang = 'pt-BR';
// Open Graph / Twitter default image now points to the new PNG logo
const ogImage = props.ogImage ?? '/logo_com_texto.png';
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" href="/logo.png" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <script defer data-domain="viajadoras.app" src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <header class="sticky top-0 z-50 border-b border-gray-200/70 dark:border-accent-800 bg-white/80 dark:bg-accent-900/60 backdrop-blur supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-accent-900/50">
      <div class="mx-auto max-w-6xl flex items-center justify-between py-1">
        <a href="/" class="flex items-center gap-2">
          <!-- Mobile: ícone + texto; Desktop: logo com texto -->
          <img src="/images/logo-128.png" alt="Viajadoras" class="h-8 w-8 sm:hidden" />
          <span class="text-base font-semibold sm:hidden">Viajadoras</span>
          <img src="/logo_com_texto.png" alt="Viajadoras" class="hidden sm:block h-14 w-auto" />
        </a>
        <!-- Desktop nav -->
        <nav class="hidden gap-6 sm:flex text-base sm:text-lg text-gray-700 dark:text-gray-300">
          <a href="/#recursos" class="transition hover:text-accent-400">Recursos</a>
          <a href="/#seguranca" class="transition hover:text-accent-400">Segurança</a>
          <a href="/privacidade" class="transition hover:text-accent-400">Privacidade</a>
        </nav>
        <!-- Mobile: menu button -->
        <button id="menu-btn" aria-controls="mobile-nav" aria-expanded="false" class="inline-flex items-center justify-center rounded-lg p-2 text-gray-700 hover:text-accent-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-400/40 sm:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6"><path d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm.75 4.5a.75.75 0 0 0 0 1.5h16.5a.75.75 0 0 0 0-1.5H3.75Z"/></svg>
        </button>
      </div>
      <!-- Mobile dropdown -->
      <nav id="mobile-nav" class="sm:hidden hidden border-t border-gray-200/70 dark:border-accent-800">
        <div class="mx-auto max-w-6xl px-4 py-2 text-base text-gray-800 dark:text-gray-100">
          <a href="/#recursos" class="block py-2">Recursos</a>
          <a href="/#seguranca" class="block py-2">Segurança</a>
          <a href="/privacidade" class="block py-2">Privacidade</a>
          <a href="/#lead" class="mt-2 inline-flex rounded-xl bg-accent-600 px-4 py-2 text-white hover:bg-accent-500">Quero o beta</a>
        </div>
      </nav>
      <script>
        const btn = document.getElementById('menu-btn');
        const nav = document.getElementById('mobile-nav');
        btn?.addEventListener('click', () => {
          const open = nav?.classList.toggle('hidden') === false;
          btn.setAttribute('aria-expanded', String(open));
        });
      </script>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-16 border-t border-gray-200 py-8 text-sm dark:border-gray-800">
      <div class="container flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <p class="text-gray-600 dark:text-gray-400">© {new Date().getFullYear()} Viajadoras</p>
        <div class="flex gap-4">
          <a href="/privacidade" class="hover:text-brand-600">Privacidade</a>
          <a href="/termos" class="hover:text-brand-600">Termos</a>
        </div>
      </div>
    </footer>
  </body>
  
</html>
