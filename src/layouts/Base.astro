---
const props = Astro.props as Record<string, string>;
const pageTitle = props.title ?? 'Viajadoras - Vai Segura';
const pageDescription = props.description ?? 'Companhia e segurança entre mulheres: conexões por viagem, check-ins e contatos de confiança.';
const lang = 'pt-BR';
// Open Graph / Twitter default image now points to the new PNG logo
const ogImage = props.ogImage ?? '/logo_com_texto.png';
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" href="/logo.png" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <script defer data-domain="viajadoras.app" src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <header class="sticky top-0 z-50 border-b border-gray-200/70 dark:border-accent-800 bg-white/70 dark:bg-accent-900/60 backdrop-blur supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-accent-900/50">
      <div class="mx-auto max-w-6xl flex items-center justify-between py-2">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo_com_texto.png" alt="Viajadoras" class="h-12 sm:h-16 w-auto" />
        </a>
        <nav class="hidden gap-6 sm:flex text-base sm:text-lg text-gray-700 dark:text-gray-300">
          <a href="/#recursos" class="transition hover:text-accent-400">Recursos</a>
          <a href="/#seguranca" class="transition hover:text-accent-400">Segurança</a>
          <a href="/privacidade" class="transition hover:text-accent-400">Privacidade</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-16 border-t border-gray-200 py-8 text-sm dark:border-gray-800">
      <div class="container flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <p class="text-gray-600 dark:text-gray-400">© {new Date().getFullYear()} Viajadoras</p>
        <div class="flex gap-4">
          <a href="/privacidade" class="hover:text-brand-600">Privacidade</a>
          <a href="/termos" class="hover:text-brand-600">Termos</a>
        </div>
      </div>
    </footer>
  </body>
  
</html>
