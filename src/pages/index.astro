---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import FeatureCard from "../components/FeatureCard.astro";
import ForWhom from "../components/ForWhom.astro";
import Destinations from "../components/Destinations.astro";
import FAQ from "../components/FAQ.astro";
const title = 'Viajadoras - App de Viagens para Mulheres: Segurança, Companhia e Rede de Apoio';
const description = 'O app para todas as mulheres que viajam - sozinhas, acompanhadas, a trabalho ou lazer. Encontre companhia, socialize, tenha segurança com check-ins e contatos de confiança. Rede de apoio feminina em viagens pelo Brasil e mundo.';
---
<Base {title} {description} lang="pt-BR">
  <Hero />

  <Section id="recursos" title="Recursos" subtitle="O que torna a Viajadoras diferente?">
    <div class="grid gap-8 sm:grid-cols-3">
      <FeatureCard
        title="Segurança"
        desc="Check-ins, contatos de confiança e pedidos de ajuda."
        image="/images/friends1.png"
        imageAlt="Mulheres utilizando recursos de segurança do app: check-ins e contatos de emergência"
        features={[
          'Check-ins com localização',
          'Contatos de confiança',
          'Pedido de ajuda (SOS)'
        ]}
      />
      <FeatureCard
        title="Rede de apoio"
        desc="Companhia e suporte entre mulheres durante a viagem."
        image="/images/friends2.png"
        imageAlt="Grupo de mulheres viajantes formando rede de apoio e companhia"
        features={[
          'Companhia por destino e datas',
          'Grupos de viagem',
          'Match por interesses'
        ]}
      />
      <FeatureCard
        title="Social"
        desc="Conexões, grupos e eventos para viajar melhor."
        image="/images/friends3.png"
        imageAlt="Mulheres interagindo em eventos e encontros organizados pelo app"
        features={[
          'Eventos e encontros',
          'Chat e convites',
          'Perfis e avaliações'
        ]}
      />
    </div>
  </Section>

  <ForWhom />

  <Destinations />

  <FAQ />
</Base>
