---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import FeatureCard from "../components/FeatureCard.astro";
import Gallery from "../components/Gallery.astro";
import ForWhom from "../components/ForWhom.astro";
import Destinations from "../components/Destinations.astro";
import Testimonials from "../components/Testimonials.astro";
import ManifestoSection from "../components/ManifestoSection.astro";
import CTASection from "../components/CTASection.astro";

const title = 'Viajadoras - Toda mulher. Qualquer viagem.';
const description = 'Conexões reais, segurança verdadeira e liberdade total. Para qualquer mulher que viaja, do jeito que você quiser.';
---
<Base {title} {description} lang="pt-BR">
  <Hero />

  <section id="como-funciona" class="py-24 lg:py-32 bg-secondary-100">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 xl:px-10">
      <div class="mx-auto max-w-4xl text-center mb-16 sm:mb-20">
        <h2 class="text-4xl font-bold text-neutral-900 sm:text-5xl lg:text-5xl leading-tight">
          Como Viajadoras <span class="text-primary">Empodera Você</span>
        </h2>
        <p class="mt-6 text-lg text-neutral-600 sm:text-xl leading-relaxed">
          Não é "só" um app de segurança. É a sua plataforma completa para viajar com confiança, comunidade e autenticidade.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10 xl:gap-12 max-w-[1400px] mx-auto">
        <FeatureCard
          title="Segurança Ativa"
          description="Viaje tranquila com check-ins automáticos e uma rede de apoio geolocalizada, pronta para agir."
          icon="shield_person"
          iconBgColor="bg-primary"
        />
        <FeatureCard
          title="Conexão Autêntica"
          description="Encontre companheiras, faça amigas ou receba acolhimento de locais. Do jeito que você quiser."
          icon="diversity_2"
          iconBgColor="bg-primary"
        />
        <FeatureCard
          title="Descoberta de Experiências"
          description="Acesse guias curados e recomendações reais para experiências além do óbvio turístico."
          icon="travel_explore"
          iconBgColor="bg-primary"
        />
      </div>
    </div>
  </section>

  <Gallery />

  <ForWhom />

  <Destinations />

  <Testimonials />

  <ManifestoSection />

  <CTASection />
</Base>
